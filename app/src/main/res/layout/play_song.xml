<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPlaySong"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:src="@drawable/ic_play_arrow_white" />

    <ImageView
        android:id="@+id/play_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/image_play"
        android:src="@drawable/ic_skip_next_white" />

    <ImageView
        android:id="@+id/play_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_toLeftOf="@id/image_play"
        android:src="@drawable/ic_skip_previous_white" />

    <RelativeLayout
        android:id="@+id/seekbartime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/image_play"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="26dp">

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:theme="@style/MySeekBarTheme"
            android:progressBackgroundTint="@color/white"/>

        <TextView
            android:id="@+id/duration_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBar"
            android:layout_toLeftOf="@+id/seekBar"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/duration_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBar"
            android:layout_toRightOf="@+id/seekBar"
            android:textColor="@color/white"/>

    </RelativeLayout>


    <ImageView
        android:id="@+id/music_icon_play"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/seekbartime"
        android:layout_centerHorizontal="true"

        android:scaleType="fitCenter"
        android:padding="10dp"
        android:src="@drawable/music_icon" />

</RelativeLayout>